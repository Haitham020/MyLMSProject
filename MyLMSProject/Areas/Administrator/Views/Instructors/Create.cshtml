            </div>
            <div class="form-group">
                <label asp-for="InstructorEmail" class="control-label"></label>
                <input asp-for="InstructorEmail" class="form-control" />
                <span asp-validation-for="InstructorEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InstructorPosition" class="control-label"></label>
                <input asp-for="InstructorPosition" class="form-control" />
                <span asp-validation-for="InstructorPosition" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LinkedInUrl" class="control-label"></label>
                <input asp-for="LinkedInUrl" class="form-control" />
                <span asp-validation-for="LinkedInUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InstructorImg" class="control-label"></label>
                <input type="file" name="ImgFile" asp-for="InstructorImg" class="form-control" />
                <span asp-validation-for="InstructorImg" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
