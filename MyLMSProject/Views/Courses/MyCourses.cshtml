@model IEnumerable<MyLMSProject.Models.Course>
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> _signInManager
@inject UserManager<IdentityUser> _userManager

@{
    ViewData["Title"] = "MyCourses";
}

<h1>MyCourses</h1>

<div class="container-fluid py-5">
    <div class="container py-5">
        <div class="row mx-0 justify-content-center">
            <div class="col-lg-8">
                <div class="section-title text-center position-relative mb-5">
                    <h6 class="d-inline-block position-relative text-secondary text-uppercase pb-2">Our Courses</h6>
                    <h1 class="display-4">Your Courses</h1>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4 col-md-6 pb-4">
                @foreach (var course in Model)
                {
                    <a class="courses-list-item position-relative d-block overflow-hidden mb-2"
                       asp-action="CourseDetails" asp-route-id="@course.CourseId">
                        <img class="img-fluid" src="~/img/courses-1.jpg" alt="">
                        <div class="courses-text">
                            <h4 class="text-center text-white px-3">
                                @course.CourseTitle
                            </h4>
                            <div class="border-top w-100 mt-3">
                                <div class="d-flex justify-content-between p-4">
                                    <span class="text-white"><i class="fa fa-user mr-2"></i>@course.CourseHours</span>
                                    <span class="text-white">
                                        <i class="fa fa-star mr-2"></i>
                                        @course.CourseLanguage
                                    </span>
                                </div>
                            </div>
                        </div>
                    </a>
                }

            </div>


        </div>
    </div>
</div>
